{
	"name": "tatan",
	"version": "0.7.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"release": "release-it"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.91",
		"@sveltejs/adapter-vercel": "1.0.0-next.84",
		"@sveltejs/kit": "^1.8.3",
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.34.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^2.10.3",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.4"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/leovoon/tatan.git"
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}"
		},
		"github": {
			"release": true,
			"releaseName": "Release v${version}",
			"host": "github.com"
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"types": [
						{
							"type": "feat",
							"section": "Features"
						},
						{
							"type": "fix",
							"section": "Bug Fixes"
						},
						{
							"type": "chore",
							"hidden": true
						},
						{
							"type": "docs",
							"section": "Documentation"
						},
						{
							"type": "style",
							"section": "Styles"
						},
						{
							"type": "refactor",
							"hidden": true
						},
						{
							"type": "perf",
							"hidden": true
						},
						{
							"type": "test",
							"hidden": true
						},
						{
							"type": "update",
							"hidden": true
						}
					]
				}
			}
		}
	},
	"dependencies": {
		"svelte-local-storage-store": "^0.3.2",
		"zod": "^3.20.6"
	}
}
